@model NewsAggregatorMain.Models.Account.RegisterViewModel

    <h2>Registration</h2>

    <form asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post">  @* antiforgeryбудет - сгенерирован токе который потом на BE будет валидироватся. т.е. теперь с консоли какой-нибудь невозможно будет сгенерит 100000 запросо.*@
<div class="validation" asp-validation-summary="ModelOnly"></div>@*если на нашей модели RegisterViewModel будут ошибки с валидацией, то они будут отрисованы на форме*@
    <div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="City">City</label>
            <input type="text" asp-for="City" />
            <span asp-validation-for="City"></span>
        </div>
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input type="text" asp-for="Country" />
            <span asp-validation-for="Country"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirmation">Confirm Password</label>
            <input type="password" asp-for="PasswordConfirmation" />
            <span asp-validation-for="PasswordConfirmation"></span>
        </div>
        <div>
            <input type="submit" value="Register" />
        </div>
    </div>
    </form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
