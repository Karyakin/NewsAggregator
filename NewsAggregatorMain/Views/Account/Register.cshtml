@model Entities.DataTransferObject.RegisterDto
<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post">
 <!--antiforgeryбудет - сгенерирован токе который потом на BE будет валидироватся. т.е. теперь с консоли какой-нибудь невозможно будет сгенерит 100000 запросо.-->
<!--<div class="validation" asp-validation-summary="ModelOnly"></div>--><!--если на нашей модели RegisterViewModel будут ошибки с валидацией, то они будут отрисованы на форме-->

    <div>
        <hr align="center" color="Blue" />
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group has-float-label">
            <label for="myBrowser">Выберите страну</label>
            <input list="Country" name="Country" size="45">
            <datalist id="Country">
                @foreach (var item1 in Model.CountryName)
                {
                    <option value=@item1></option>
                }
            </datalist>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="myBrowser">Выберите город</label>
            <input list="character" name="City" size="57">
            <datalist id="character">
                @foreach (var item in Model.CitiesName)
                {
                    <option value=@item></option>
                }
            </datalist>

        </div>




        <div>
            <label for="DayOfBirth">Введите дату рождения:</label>
            <input type="date" asp-for="DayOfBirth" value="12-02-2012">
            <span asp-validation-for="DayOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phones">Phones</label>
            <input type="text" asp-for="Phones" />
            <span asp-validation-for="Phones" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirmation">Confirm Password</label>
            <input type="password" asp-for="PasswordConfirmation" />
            <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Register" />
        </div>
    </div>
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

