                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Login)
                </dd>
                <dt class="col-sm-2">
                    Role
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role.Name)
                </dd>
                <dt class="col-sm-2">
                    Country
                </dt>
                <dd class="col-sm-10">
                  @Html.DisplayFor(model => model.Country) 
                </dd>
                <dt class="col-sm-2">
                    City
                </dt>
                <dd class="col-sm-10">


                    @Html.EditorFor(model => model.Login)




                    @* <input type="text" @Html.TextBoxFor(model => model.City) />
        <input type="text" asp-for="City" />*@
