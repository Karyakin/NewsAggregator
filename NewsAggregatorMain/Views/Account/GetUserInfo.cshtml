        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" asp-for="Login" />
           
            <span asp-validation-for="Login"></span>
            <div class="row">
                <div class="col-md-4">
                        <input type="submit" value="Find user" class="btn btn-outline-info" asp-action="GetUserInfo" /> 
